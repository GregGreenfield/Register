package register;

import java.util.ArrayList;
import java.util.List;

public class Teacher {
	private int TID;
	private String name;
	private List<Classes> classes;
	
	public Teacher(int TID, String name)
	{
		System.out.println("Teacher made!!!!");
		this.TID = TID;
		this.name = name;
		classes = new ArrayList<Classes>();
	}
	
	public String getName(){
		return name;
	}
	
	public int getTID(){
		return TID;
	}
	
	public void addClass(int classID, String className){
		classes.add(new Classes(classID, className));		
	}
	
	public String getClasses(){
		String ret = "";
		
		for(Classes cl : classes){
			ret.concat(cl.getClassID());
			ret.concat(cl.getName() + ":");
		}
		
		return ret;
	}
}
